<html>
    <body>
      <h1>Bienvenido {{user.first_name}} {{user.last_name}}</h1> 
      <div class="pagination"><a href="/auth/logout">Cerrar Sesion</a> <a href="/">Perfil</a></div>
      <h2>Product List</h2>
{{#each products.payload}}
  <div class="product">
    <h2>{{title}}</h2>
    <p>Description: {{description}}</p>
    <p>Price: {{price}}</p>
    <p>Thumbnail: {{thumbnail}}</p>
    <p>Code: {{code}}</p>
    <p>Stock: {{stock}}</p>
    <p>Status: {{status}}</p>
    <p>Category: {{category}}</p>
    <button class="add-to-cart-button" data-product-id="{{code}}">Add to Cart</button>

  </div>
{{/each}}

<div class="pagination">
  {{#if products.prevLink}}
    <a href="{{products.prevLink}}">Prev</a>
  {{/if}}
  {{#if products.nextLink}}
    <a href="{{products.nextLink}}">Next</a>
  {{/if}}
</div>

</body>
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"></script>
<script src="/js/products.js"></script>
</html>